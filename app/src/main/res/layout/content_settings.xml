<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.katsuna.messages.ui.activities.SettingsActivity"
    tools:showIn="@layout/activity_settings">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/default_sms_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/set_as_default"
            android:visibility="gone" />

        <TextView
            android:id="@+id/default_sms_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/common_black12"  />

    <include layout="@layout/common_size_profile_selector" />

    <include layout="@layout/common_color_profile_selector" />

    <include layout="@layout/common_right_hand" />

</LinearLayout>