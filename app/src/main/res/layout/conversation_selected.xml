<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/conversation_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/common_selection_elevation"
    android:orientation="vertical"
    android:paddingBottom="4dp"
    android:paddingEnd="16dp"
    android:paddingStart="16dp"
    android:paddingTop="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/delete_conversation_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/common_ic_delete_black54_24dp"
            tools:ignore="ContentDescription" />

        <include
            android:id="@+id/photo"
            layout="@layout/common_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="56dp"
            android:layout_toEndOf="@id/delete_conversation_button" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_margin_left_right"
            android:layout_toEndOf="@id/photo"
            android:orientation="vertical">

            <TextView
                android:id="@+id/displayName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="@dimen/common_text_size" />

            <TextView
                android:id="@+id/body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/common_grey900"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/dateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/message_button_container"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/message_button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:drawablePadding="@dimen/common_drawable_padding"
                android:drawableStart="@drawable/common_ic_message_black_24dp"
                android:ellipsize="end"
                android:gravity="start|center"
                android:lines="1"
                android:paddingEnd="@dimen/common_button_padding"
                android:paddingStart="@dimen/common_button_padding"
                android:text="@string/common_message"
                android:textAllCaps="false"
                android:textColor="@color/common_black"
                android:textSize="20sp" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/call_button_container"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/call_button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawablePadding="@dimen/common_drawable_padding"
                android:drawableStart="@drawable/common_ic_call_white_24dp"
                android:ellipsize="end"
                android:gravity="start|center"
                android:lines="1"
                android:paddingEnd="@dimen/common_button_padding"
                android:paddingStart="@dimen/common_button_padding"
                android:text="@string/common_call"
                android:textAllCaps="false"
                android:textColor="@color/common_white"
                android:textSize="20sp" />

        </FrameLayout>

    </LinearLayout>

</LinearLayout>