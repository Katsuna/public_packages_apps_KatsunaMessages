<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_row"
    android:orientation="vertical"
    android:paddingBottom="4dp"
    android:paddingEnd="16dp"
    android:paddingStart="16dp"
    android:paddingTop="4dp">

    <LinearLayout
        android:id="@+id/separator_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/separator"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="sans-serif-medium"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="@color/grey800"
            android:textSize="20sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/separator_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:visibility="gone"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/photo"
            android:layout_width="@dimen/contact_photo_size_intemediate"
            android:layout_height="@dimen/contact_photo_size_intemediate"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/ic_person_grey_50px"
            app:riv_corner_radius="50dp"
            app:riv_mutate_background="true"
            app:riv_oval="false"
            app:riv_tile_mode="repeat" />

        <TextView
            android:id="@+id/contact_name"
            style="@style/RobotoBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/text_margin_top_bottom"
            android:layout_marginEnd="@dimen/text_margin_left_right"
            android:layout_marginLeft="@dimen/text_margin_left_right"
            android:layout_marginRight="@dimen/text_margin_left_right"
            android:layout_marginStart="@dimen/text_margin_left_right"
            android:layout_marginTop="@dimen/text_margin_top_bottom"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black87"
            android:textSize="20sp" />

    </LinearLayout>
</LinearLayout>