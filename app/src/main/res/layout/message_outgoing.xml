<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="16dp"
    android:paddingStart="16dp"
    android:paddingTop="16dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/photo"
        android:layout_width="@dimen/contact_photo_size_intemediate"
        android:layout_height="@dimen/contact_photo_size_intemediate"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:background="@drawable/ic_person_grey_50px"
        app:riv_corner_radius="50dp"
        app:riv_mutate_background="true"
        app:riv_oval="false"
        app:riv_tile_mode="repeat" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/photo">

        <TextView
            android:id="@+id/body"
            style="@style/RobotoMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="end"
            android:textColor="@color/black87"
            android:textSize="@dimen/font_size_intemediate" />

        <TextView
            android:id="@+id/dateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/body" />

    </RelativeLayout>

</RelativeLayout>